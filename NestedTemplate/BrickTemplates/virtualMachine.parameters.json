{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "value": "epamazureuser"
        },
        "adminPassword": {
            "reference": {
                "keyVault": {
                    "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourcegroup().id,'/providers/Microsoft.KeyVault/vaults/StaticKV')]"
                },
                "secretName": "[variables('vmpassword')]"
            }
            
        },            
        "dnsLabelPrefix": {
            "value": "epamazurevm"
        }
    }
}